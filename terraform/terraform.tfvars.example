# Azure Pricing Tool - Terraform Configuration Example
# ===================================================
# Copy this to terraform.tfvars and customize the values

# Azure Subscription Configuration (REQUIRED)
subscription_id = "your-subscription-id-here"

# Resource Naming and Location
resource_group_name = "azure-pricing-RG"
location           = "East US"
prefix             = "az-pricing-tool"
environment        = "production"

# Performance and Scale Configuration
max_pricing_items = "5000"

